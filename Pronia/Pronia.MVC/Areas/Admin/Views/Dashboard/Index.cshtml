@model List<SliderItem>
<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Short Description
                                    </th>
                                    <th>
                                        Offer
                                    </th>
                                    <th>
                                        Created Date
                                    </th>
                                    <th>
                                        Last Modified Date
                                    </th>
                                    <th>
                                        Deleted Date
                                    </th>
                                    <th>
                                        Is Deleted
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SliderItem item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td class="py-1">
                                            <img src="~/sliderimages/@item.ImgPath" alt="image" />
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.ShortDescription
                                        </td>
                                        <td>
                                            @item.Offer %
                                        </td>
                                        <td>
                                            @item.CreatedDate
                                        </td>
                                        <td>
                                            @{
                                                string modifyDate = (item.LastModifiedDate == null) ? "NULL" : item.LastModifiedDate.ToString();
                                            }
                                            @modifyDate
                                        </td>
                                        <td>
                                            @{
                                                string DeleteDate = (item.DeleteDate == null) ? "NULL" : item.DeleteDate.ToString();
                                            }
                                            @DeleteDate
                                        </td>
                                        <td>
                                            @item.IsDeleted
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>