@model List<SliderItem>
<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <a asp-controller="Table" asp-action="Create" class="btn btn-primary">Create</a>
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Short Description
                                    </th>
                                    <th>
                                        Offer
                                    </th>
                                    <th>
                                        Is Deleted
                                    </th>
                                    <th colspan="3">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SliderItem item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td class="py-1">
                                            <img src="~/sliderimages/@item.ImgPath" alt="image" />
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.ShortDescription
                                        </td>
                                        <td>
                                            @item.Price
                                        </td>
                                        <td>
                                            @item.IsDeleted
                                        </td>
                                        <td>
                                            <a class="btn btn-info">Info</a>
                                        </td>
                                        <td>
                                            <a asp-controller ="Table" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                                        </td>
                                        <td>
                                            <a asp-controller="Table" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>